<!-- ROOT/HOME -->
<body class="home">
    <header class="text-center sans-serif">
        <h1>
        	<%= config.title %>
        </h1>

        <hr>

        <p>
            <em><%= config.description %></em>
        </p>
   </header>

    <main class="text-center serif">
        <nav class="home-nav">
            <ul>
                <%- site.pages
                		.filter(p => theme.main_menu.includes(p.title))
                		.map(p => `<li><a class="colorless" href="${url_for(p.path)}">${p.title}</a></li>`)
                		.join("\n")
                %>
            </ul>
        </nav>
    </main>
</body>

