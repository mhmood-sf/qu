<!-- TAG PAGE -->
<body class="page">
    <header> 
        <h1>
            tag: <%- page.tag %>
            <%- partial("partials/permalink", { link: page.permalink }) %>
        </h1>
    </header>

    <hr>

    <main>
        <p>
            [<a href="<%- url_for('tags/index.html') %>">All tags</a>]
        </p>
        
        <h3>
            Posts tagged <code><%- page.tag %></code>:
        </h3>

        <%- page.posts.filter(p => !p.draft).map(p => `<a href="${url_for(p.path)}">${p.title}</a>`).join('<br>') %>
    </main>

    <hr>

    <footer>
        <%- partial('partials/site-footer') %>
    </footer>

</body>

